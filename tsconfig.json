{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "ES2015"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,

    /* JSON & File Handling */
    "resolveJsonModule": true,

    /* Misc */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
